
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for application configuration.
    // This is safe as it only contains non-sensitive UI settings.
    match /appConfig/{configId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can change settings.
    }

    // For all other documents, require authentication for any access.
    // This rule does NOT apply to paths already matched above.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
